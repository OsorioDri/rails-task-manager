<h1>Edit Task</h1>
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.label :completed, "Completed" %>
  <%= f.submit %>
<% end %>
<br>
<%= link_to 'Back to index', tasks_path %>
